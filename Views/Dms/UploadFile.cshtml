@using System.ComponentModel.DataAnnotations;
@using Document_Management.Utility.Constants
@model Document_Management.Models.FileDocument;

@{
    ViewData["Title"] = "Upload";
}

<h2><b>UPLOAD FILE</b></h2>
<hr />

<div class="row">
    <div class="col">
    <form asp-action="UploadFile" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <div class="col">
                <input id ="fileInput" name="file" type="file" class="form-control w-" accept=".pdf" style="width:110px" />
                <span asp-validation-for="Name" class="text-danger"></span>
                <small class="text-muted">Maximum file size allowed: 20MB</small>
            </div>
        </div>

        <!-- Add a hidden field to store the selected file name -->
        <input type="hidden" asp-for="OriginalFilename" />

        <!-- Add the following span element to display the selected file name -->
        <div class="mb-3">
            <label class="form-label">File Name:</label>
            <span id="selectedFileName" class="text-muted">No file selected</span>
        </div>

        <div class="mb-3">
            <label asp-for="Company" class="form-label"></label>
            <div class="col">
                <select asp-for="Company" class="form-select full-width" id="companyDropdown" style="width:100%" required>
                    <option value="" selected disabled>-- Select the company --</option>
                    @foreach (var company in Companies.All)
                    {
                        <option value="@company">@company</option>
                    }
                </select>
                <span asp-validation-for="Company" class="text-danger"></span>
            </div>
        </div>


        <div class="mb-3">
            <label asp-for="Year" class="form-label"></label>
            <div class="col">
                    <select asp-for="Year" id="yearDropdown" class="form-select full-width" style="width:100%"></select>
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Department" class="form-label"></label>
            <div class="col">
                <select asp-for="Department" class="form-select full-width" id="departmentDropdown" style="width:100%" required>
                    <option value="" selected disabled>-- Select the department --</option>
                    @foreach (var department in Departments.All)
                    {
                        <option value="@department">@department</option>
                    }
                </select>
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Category" class="form-label"></label>
            <div class="col">
                <select asp-for="Category" class="form-select full-width" id="categoryDropdown" style="width:100%" required>
                    <option value="" selected disabled>-- Select the category --</option>
                    @foreach (var category in Categories.All)
                    {
                        <option value="@category">@category</option>
                    }
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
        </div>

        <!--Administration Sub Category Dropdown-->
        <div class="mb-3" id="administrationSubCategories" style="display: none;">
            <label asp-for="SubCategory" class="form-label"></label>
            <div class="col">
                <select asp-for="SubCategory" class="form-select full-width" id="administrationDropdown" style="width:100%">
                    <option value="" selected disabled>-- Select the sub category --</option>
                    @foreach (var subCategory in SubCategories.AdministrationSubCategory)
                    {
                        <option value="@subCategory">@subCategory</option>
                    }
                </select>
                <span asp-validation-for="SubCategory" class="text-danger"></span>
            </div>
        </div>

        <!--Operations Sub Category Dropdown-->
        <div class="mb-3" id="operationsSubCategories" style="display: none;">
            <label asp-for="SubCategory" class="form-label"></label>
            <div class="col">
                <select asp-for="SubCategory" class="form-select full-width" id="operationsDropdown" style="width:100%" required>
                    <option value="" selected disabled>-- Select the sub category --</option>
                    @foreach (var subCategory in SubCategories.OperationSubCategory)
                    {
                        <option value="@subCategory">@subCategory</option>
                    }
                </select>
                <span asp-validation-for="SubCategory" class="text-danger"></span>
            </div>
        </div>
        
        <!--Finance Sub Category Dropdown-->
        <div class="mb-3" id="financeSubCategories" style="display: none;">
            <label asp-for="SubCategory" class="form-label"></label>
            <div class="col">
                <select asp-for="SubCategory" class="form-select full-width" id="financeDropdown" style="width:100%">
                    <option value="" selected disabled>-- Select the sub category --</option>
                    @foreach (var subCategory in SubCategories.FinanceSubCategory)
                    {
                        <option value="@subCategory">@subCategory</option>
                    }
                </select>
                <span asp-validation-for="SubCategory" class="text-danger"></span>
            </div>
        </div>

        <!--Check Vouchers Sub Category Dropdown-->
        <div class="mb-3" id="checkVoucherSubCategories" style="display: none;">
            <label asp-for="SubCategory" class="form-label"></label>
            <div class="col">
                <select asp-for="SubCategory" class="form-select full-width" id="checkVoucherDropdown" style="width:100%" required>
                    <option value="" selected disabled>-- Select the sub category --</option>
                    @foreach (var subCategory in SubCategories.CheckVouchersSubCategory)
                    {
                        <option value="@subCategory">@subCategory</option>
                    }
                </select>
                <span asp-validation-for="SubCategory" class="text-danger"></span>
            </div>
        </div>
        
        <!--Payroll Sub Category Dropdown-->
        <div class="mb-3" id="payrollSubCategories" style="display: none;">
            <label asp-for="SubCategory" class="form-label"></label>
            <div class="col">
                <select asp-for="SubCategory" class="form-select full-width" id="payrollDropdown" style="width:100%">
                    <option value="" selected disabled>-- Select the sub category --</option>
                    @foreach (var subCategory in SubCategories.PayrollSubCategory)
                    {
                        <option value="@subCategory">@subCategory</option>
                    }
                </select>
                <span asp-validation-for="SubCategory" class="text-danger"></span>
            </div>
        </div>

        <!--Compliance or Legal Sub Category Dropdown-->
        <div class="mb-3" id="complianceLegalSubCategories" style="display: none;">
            <label asp-for="SubCategory" class="form-label"></label>
            <div class="col">
                <select asp-for="SubCategory" class="form-select full-width" id="complianceLegalDropdown" style="width:100%" required>
                    <option value="" selected disabled>-- Select the sub category --</option>
                    @foreach (var subCategory in SubCategories.ComplianceOrLegalSubCategory)
                    {
