@model List<FileDocument>
@{
    ViewData["Title"] = "General Search";
}

<h1>File Search Results</h1>
<hr />

<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr class="text-nowrap table-active">
                <th scope="col">File Name</th>
                <th scope="col">Description</th>
                <th scope="col">Location Folder</th>
                <th scope="col">Uploaded By</th>
                <th scope="col">Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var file in Model)
            {
                <tr class="align-items-center">
                    <td>@file.OriginalFilename</td>
                    <td>@file.Description</td>
                    @if(file.SubCategory == "N/A")
                    {
                      <td>@file.Company > @file.Year > @file.Department </td>
                    }
                    else
                    {
                      <td>@file.Company > @file.Year > @file.Department > @file.SubCategory</td>
                    }
                    <td>@file.Username</td>
                    <td>@file.DateUploaded</td>
                </tr>
            }
        </tbody>
    </table>
</div>
