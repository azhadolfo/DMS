@model List<FileDocument>

@{
    ViewData["Title"] = "Download";
}

<h1 class="h1">List of PDF Files</h1>

@* <form class="d-flex">
    <input id="searchInput" class="form-control me-sm-2 rounded border-dark-subtle border-1" type="search" placeholder="Search by Name, Date, Description, or Username">
