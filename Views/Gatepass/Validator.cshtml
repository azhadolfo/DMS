@model IEnumerable<Document_Management.Models.RequestGP>

@{
    var usersCount = (ViewBag.users as List<Document_Management.Models.RequestGP>)?.Count ?? 0;
}

@{
    ViewData["Title"] = "Validator";
}

<h1>@ViewData["Title"]</h1>

@* <p>
    <a asp-action="Create" class="btn btn-primary rounded-3">Create New</a>
</p> *@

<table class="table table-responsive">
    <thead>
        <tr>
            <th class="text-primary ">Full Name</th>
            <th class="text-primary ">@Html.DisplayNameFor(model => model.Contact)</th>
            <th class="text-primary ">@Html.DisplayNameFor(model => model.GatepassId)</th>
            <th class="text-primary ">@Html.DisplayNameFor(model => model.ScheduleDate)</th>
            <th class="text-primary ">@Html.DisplayNameFor(model => model.Purpose)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in (List <Document_Management.Models.RequestGP>)ViewBag.users)
        {
                <tr class="align-middle text-wrap">
                <td class="w-50"><a asp-controller="Gatepass" asp-action="Details" class="text-decoration-none">@(user.LastName + ",  " + user.FirstName + "  " + user.MiddleName)</a></td>
                <td><a asp-controller="Gatepass" asp-action="Details" class="text-decoration-none">@user.Contact</a></td>
                <td><a asp-controller="Gatepass" asp-action="Details" class="text-decoration-none">@user.GatepassId</a></td>
                <td><a asp-controller="Gatepass" asp-action="Details" class="text-decoration-none">@user.ScheduleDate</a></td>
                <td><a asp-controller="Gatepass" asp-action="Details" class="text-decoration-none">@user.Purpose</a></td>
                <td class="w-50">
                    <a asp-action="Approved" asp-route-id="@user.Id" class="btn btn-secondary">Approved</a> |
                    <a asp-action="Disapproved" asp-route-id="@user.Id" class="btn btn-danger">Disapproved</a>
                </td>
            </tr>
        }
    </tbody>
</table>
