@model IEnumerable<SubCategory>

@{
    ViewData["Title"] = "Sub Categories";
}

<h2><b>SUB CATEGORIES</b></h2>

<p>
    <a asp-action="Create" class="btn btn-secondary rounded-3">Create New</a>
</p>

<div class="table-responsive">
    <table id="myTable" class="table table-hover">
        <thead>
            <tr class="text-nowrap">
                <th class="text-primary">Category</th>
                <th class="text-primary">Sub Category</th>
                <th class="text-primary">Created by</th>
                <th class="text-primary">Created Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var subCategory in Model)
            {
                <tr class="align-text-bottom">
                    <td>
                        @Html.DisplayFor(model => subCategory.Category.CategoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => subCategory.SubCategoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => subCategory.CreatedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(model => subCategory.CreatedDate)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@subCategory.Id" class="btn btn-light">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#searchInput").on("keyup", function () {
                var searchText = $(this).val().toLowerCase();

                $("tbody tr").each(function () {
                    var row = $(this).text().toLowerCase();
                    if (row.includes(searchText)) {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });
            });
        });
    </script>
}
