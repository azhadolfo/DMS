@model ActivityReportViewModel

@{
    ViewData["Title"] = "File Upload Report";
    var userName = Model.CurrentUser;
}

<div class="row mb-3" style="margin: 0 2em 0 2em">
    <div class="col-6">
        <h4>Report Generated by: @userName</h4>
        <h5>Date Range: @Model.DateFrom.ToString("MMM dd, yyyy") to @Model.DateTo.ToString("MMM dd, yyyy")</h5>
    </div>
    <div class="col-6 text-end">
        <button class="btn btn-secondary buttons" onclick="window.print()">Print Report</button>
    </div>
</div>

@if (Model.UploadedFiles != null && Model.UploadedFiles.Any())
{
    <div style="margin: 0 2em 0 2em">
        <table class="table table-bordered table-striped w-100">
            <thead>
                <tr>
                    <th>Company</th>
                    <th>Year</th>
                    <th>Department</th>
                    <th>Category</th>
                    <th>Sub Category</th>
                    <th>User</th>
                    <th>File Count</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var fileGroup in Model.UploadedFiles)
                {
                    <tr>
                        <td>@fileGroup.Company</td>
                        <td>@fileGroup.Year</td>
                        <td>@fileGroup.Department</td>
                        <td>@fileGroup.Category</td>
                        <td>@fileGroup.SubCategory</td>
                        <td>@fileGroup.Username</td>
                        <td>@fileGroup.FileCount</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info text-center" role="alert">
        No files uploaded within the specified date range.
    </div>
}

<div class="footer-section" style="margin: 0 2em 0 2em">
    <p><i>This report was generated on @DateTime.Now.ToString("MMM dd, yyyy")</i></p>
</div>

<a asp-controller="Report" asp-action="ActivityReportForm" class="btn btn-primary buttons" style="margin: 0 2em 0 2em">Back</a>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            window.onafterprint = function () {
                alert('Print completed!');
            };
        });
    </script>
}
